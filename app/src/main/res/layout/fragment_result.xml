<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".views.fragments.DoctorsDetailedFragment">


    <TextView
        android:id="@+id/name_string4"
        android:layout_width="412dp"
        android:layout_height="87dp"
        android:background="@color/secondary_background"
        android:fontFamily="serif"
        android:shadowRadius="1"
        android:text="\nРегистратура \nГородской поликлиники"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/app_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вы записаны!"
        android:layout_marginStart="145dp"
        android:fontFamily="serif"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="145dp"
        android:shadowColor="@color/black"
        android:shadowDx="-2.4"
        android:shadowDy="-2.4"
        android:shadowRadius="1"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_to_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="В меню"
        android:textColor="@color/black"
        app:backgroundTint="@color/secondary_background"
        app:cornerRadius="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="711dp"
        android:layout_height="836dp"
        android:layout_marginStart="-200dp"
        android:src="@drawable/chdoc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toEndOf="@+id/back_to_menu"
        app:layout_constraintTop_toBottomOf="@+id/name_string4" />

</androidx.constraintlayout.widget.ConstraintLayout>